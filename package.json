{
  "name": "clockworks",
  "version": "1.0.0",
  "description": "Never Stopwatch Static Web Application",
  "scripts": {
    "build all": "node ./nephila/build.js/build.js ../../build.json release",
    "build html": "node ./nephila/build.js/build.js ../../build.json none",
    "build light style": "lessc --source-map=style/theme.light.css.map --source-map-url=style/theme.light.css.map theme.light.less style/theme.light.css",
    "build dark style": "lessc --source-map=style/theme.dark.css.map --source-map-url=style/theme.dark.css.map theme.dark.less style/theme.dark.css",
    "build script": "tsc -p ./script/tsconfig.json",
    "watch script": "tsc --watch -p ./script/tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wraith13/clockworks.git"
  },
  "author": "wraith13",
  "license": "BSL-1.0",
  "bugs": {
    "url": "https://github.com/wraith13/clockworks/issues"
  },
  "homepage": "https://github.com/wraith13/clockworks",
  "devDependencies": {
    "less": "^4.1.2",
    "typescript": "^4.5.4"
  }
}
