{
  "name": "clockworks",
  "version": "1.0.0",
  "description": "Never Stopwatch Static Web Application",
  "scripts": {
    "build all": "node ./build.js release",
    "build html": "node ./build.js none",
    "build light style": "lessc ./style/theme.light.less ./style/theme.light.css",
    "build dark style": "lessc ./style/theme.dark.less ./style/theme.dark.css",
    "build script": "tsc -p ./script/tsconfig.json",
    "debug build all": "node ./build.js debug",
    "debug light build style": "lessc --source-map-map-inline ./style/theme.light.less ./style/theme.light.css",
    "debug dark build style": "lessc --source-map-map-inline ./style/theme.dark.less ./style/theme.dark.css",
    "debug build script": "tsc --inlineSourceMap -p ./script/tsconfig.json",
    "watch script": "tsc --watch --inlineSourceMap -p ./script/tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wraith13/clockworks.git"
  },
  "author": "wraith13",
  "license": "BSL-1.0",
  "bugs": {
    "url": "https://github.com/wraith13/clockworks/issues"
  },
  "homepage": "https://github.com/wraith13/clockworks",
  "devDependencies": {
    "less": "^4.1.1",
    "typescript": "^4.2.3"
  }
}
